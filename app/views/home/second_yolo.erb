<div class="container">
  <div class="starter-template">
    <div class="row">
      <% if @post.count==0 %>
        <h1>아직 시작하지 않았습니다.</h1>
        <p class="lead">조금만 기다려주세요!</p>
      <% else %>
        <h2>YOLO 미션 토스 <%=@post.first.day %>일차</h2>
        <h4 style="text-align:right;margin-bottom:30px">made by YOLO 팀</h4>
        <% @post.each do |post| %>
        <div class="col-xs-12" style="margin-bottom:50px">
          <div class="col-xs-5">
            <p class="lead" style="text-align:left"><%= post.from %>호</p>
            <img src="<%= post.from_image.url %>" width="100%" />
          </div>
          <div class="col-xs-2" style="margin:100px 0px;">
            <img src="https://s3.ap-northeast-2.amazonaws.com/projectyolo/img/KakaoTalk_20170102_223029856.png" width="100%" height="100%"/>
          </div>
          <div class="col-xs-5">
            <p class="lead" style="text-align:left"><%= post.target%>호</p>
            <img src="<%= post.target_image.url %>" width="100%"/>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>